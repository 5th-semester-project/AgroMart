{
   
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",

    ],
    "baseUrl": ".",
      "paths": {
        "@/*": ["./*"]
      },
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
, "components/chat.jsx", "pages/api/chat.js"  ],
  "exclude": [
    "node_modules"
  ]
}
